# Example Terraform Variables for Stack 2 - Knowledge Base
# Copy this file to terraform.tfvars and update with Stack 1 outputs
# WARNING: Never commit terraform.tfvars to version control!

# ============================================================================
# AWS Configuration
# ============================================================================
aws_region   = "us-east-1"  # Must match Stack 1
environment  = "dev"         # Must match Stack 1
project_name = "docsmart"    # Must match Stack 1

# ============================================================================
# Stack 1 Outputs - CRITICAL: Get these from Stack 1's terraform output
# ============================================================================
# Run in stack1 directory: terraform output
s3_bucket_name           = "docsmart-documents-XXXXXXXXXXXX"  # From Stack 1 output
aurora_cluster_arn       = "arn:aws:rds:us-east-1:XXXXXXXXXXXX:cluster:docsmart-aurora-cluster"
database_name            = "docsmart_kb"  # Must match Stack 1
database_master_username = "dbadmin"      # Must match Stack 1
database_master_password = "CHANGE_ME_TO_SECURE_PASSWORD_123!"  # Must match Stack 1
bedrock_kb_role_name     = "docsmart-bedrock-kb-role"

# ============================================================================
# Bedrock Models Configuration
# ============================================================================
embedding_model_id = "amazon.titan-embed-text-v2:0"
llm_model_id       = "anthropic.claude-3-5-sonnet-20240620-v1:0"

# ============================================================================
# Data Source Configuration
# ============================================================================
s3_inclusion_prefixes = []  # Empty = process all files in bucket

# ============================================================================
# Chunking Configuration
# ============================================================================
chunking_strategy        = "FIXED_SIZE"
chunk_max_tokens         = 300
chunk_overlap_percentage = 20

# ============================================================================
# Retrieval Configuration
# ============================================================================
max_results     = 5
score_threshold = 0.1
