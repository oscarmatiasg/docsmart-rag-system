# DocSmart RAG System - Environment Variables Template
# Copy this file to .env and update with your actual values
# WARNING: Never commit .env to version control!
# ============================================================================

# ============================================================================
# AWS Configuration
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=ASIAVVIKEY3F...  # Your AWS access key
AWS_SECRET_ACCESS_KEY=jH0GvKU...   # Your AWS secret key
AWS_SESSION_TOKEN=IQoJb3JpZ2luX...  # Optional: for temporary credentials

# ============================================================================
# S3 Configuration (from Stack 1 output)
# ============================================================================
S3_BUCKET_NAME=docsmart-documents-XXXXXXXXXXXX

# ============================================================================
# Aurora PostgreSQL Configuration (from Stack 1 output)
# ============================================================================
DB_HOST=docsmart-aurora-cluster.cluster-XXXXXX.us-east-1.rds.amazonaws.com
DB_PORT=5432
DB_NAME=docsmart_kb
DB_USER=dbadmin
DB_PASSWORD=YourSecurePassword123!  # Must match terraform.tfvars

# ============================================================================
# Bedrock Configuration (from Stack 2 output)
# ============================================================================
KNOWLEDGE_BASE_ID=YYIBMDUAYW
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v2:0
BEDROCK_LLM_MODEL=anthropic.claude-3-5-sonnet-20240620-v1:0

# ============================================================================
# RAG Configuration
# ============================================================================
MAX_TOKENS=4096
TEMPERATURE=0.7
TOP_P=0.9
SCORE_THRESHOLD=0.1
MAX_RESULTS=5

# ============================================================================
# Security
# ============================================================================
ENABLE_GUARDRAILS=true
LOG_LEVEL=INFO
MAX_QUERY_LENGTH=2000
ALLOWED_FILE_TYPES=pdf,docx,txt,md
